{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "magicorm": ["node_modules/magicorm/dist"]
    },
    "moduleResolution": "node",
    "target": "es2022",
    "module": "CommonJS",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src/**/*", "bin"],
}
